<div class="container user">
  <div class="col-md-4 col-md-offset-4 col-sm-8 col-sm-offset-2">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title text-center"><i class="fa fa-sign-in" aria-hidden="true"></i> 登入</h3>
      </div>
      <div class="panel-body">
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,label: '邮箱地址',placeholder: 'user@domain.com', required: false, autofocus: true %>
            <%= f.input :password, label: '密码',placeholder: '请输入密码',required: false %>
            <%= f.input :remember_me,label: '记住登入状态', as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "登入" ,class:"btn btn-success"%>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
